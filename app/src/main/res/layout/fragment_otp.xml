<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center"
        android:text="Verification"
        android:textColor="@android:color/white"
        android:textSize="34sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="44sp"
        android:layout_margin="20dp"
        android:gravity="center"
        android:text="Enter One Time Password"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"/>


    <LinearLayout
        android:id="@+id/layout_otp"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editTextone"
            android:layout_width="40sp"
            android:layout_height="42sp"
            android:focusedByDefault="true"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:nextFocusRight="@+id/editText_two"
            android:textColor="@android:color/white"></EditText>

        <EditText
            android:id="@+id/editTexttwo"
            android:layout_width="40sp"
            android:layout_height="42sp"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:textColor="@android:color/white" />

        <EditText
            android:id="@+id/editTextthree"
            android:layout_width="40sp"
            android:layout_height="42sp"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:textColor="@android:color/white" />

        <EditText
            android:id="@+id/editTextfour"
            android:layout_width="40sp"
            android:layout_height="42sp"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:textColor="@android:color/white" />

        <EditText
            android:id="@+id/editTextfive"
            android:layout_width="40sp"
            android:layout_height="42sp"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:textColor="@android:color/white" />

        <EditText
            android:id="@+id/editTextsix"
            android:layout_width="40sp"
            android:layout_height="42sp"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <Button
        android:id="@+id/otp_btn_submit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_datepicker_bg"
        android:text="SUBMIT"
        android:textColor="@android:color/white" />

</LinearLayout>